{
    "name": "kachuru/map-maker",
    "description": "Classes for building maps",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rupert Jones",
            "email": "ru@kachuru.uk"
        }
    ],
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.0",
        "friends-of-phpspec/phpspec-code-coverage": "^6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.8"
    },
    "scripts": {
        "spec": [
            "phpdbg -qrr vendor/bin/phpspec run"
        ],
        "sniff": [
            "vendor/bin/phpcs --standard=PSR2 src/"
        ],
        "fix": [
            "vendor/bin/phpcbf --standard=PSR2 src/"
        ],
        "stan": [
            "vendor/bin/phpstan analyse src/ --level 5"
        ],
        "test": [
            "@sniff",
            "@spec",
            "@stan"
        ]
    },
    "autoload": {
        "psr-4": {
            "Kachuru\\": "src/Kachuru/"
        }
    }
}
